@import 'nib'

a, a:link
	cursor pointer

body
	padding-top 100px
	background #ddd

h2
	font-weight 200
	font-size 3em
	line-height: 1em
	color #333
	text-shadow: 0px 2px #efefef
	margin-top: 30px
	padding-bottom: 20px

h3 
	font-weight 400
	color #333
	text-shadow: 0px 1px #efefef

h5 
	font-weight 300
	font-size 1em	
	color #7d0c00
	text-shadow: 0px 1px #efefef


table
	tfoot, tbody
		th
			border-top 1px solid #DDD


.figure {
float: right;
}

img
	margin-left 100px
	margin-bottom 20px

.whiteborder {
	border: 5px solid white;
}

.caption {
    text-align:right;
    color: #811209;
}


.morecomments {
    display: none;
}